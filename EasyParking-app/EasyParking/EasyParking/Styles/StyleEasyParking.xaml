<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyParking.Styles.StyleEasyParking">


    <Color x:Key="Color1">#FECD45</Color>
    <Color x:Key="Color2">#FFCC3D</Color>
    <Color x:Key="Color3">#E74C3C</Color>
    <Color x:Key="Color4">#2980B9</Color>
    <Color x:Key="Color5">#2968C8</Color> 
    <Color x:Key="Color6">#2968C8</Color>
    <Color x:Key="Color7">#17202A</Color>
    <Color x:Key="Color8">#1A5276</Color>

    <Color x:Key="ColorW">White</Color>
    <Color x:Key="ColorB">Black</Color>
    <Color x:Key="ColorG">Gray</Color>

    <!--IMAGEN-->
    <Style x:Key="ImagenItemStyle" TargetType="Image">
        <Setter Property="Margin" Value="0" />
        <Setter Property="BackgroundColor" Value="#FFFFFF"  />
        <Setter Property="WidthRequest" Value="130" />
        <Setter Property="HeightRequest" Value="130" />

    </Style>

</ResourceDictionary>